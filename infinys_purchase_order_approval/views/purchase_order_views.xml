<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit_approval" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.approval</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='purchase_delivery_invoice']" position="after">
                    <page string="Approval Details" name="approval_details" modifiers="{'invisible': [('approval_line_ids', '=', [])]}">
                        <field name="approval_line_ids" widget="one2many_list" readonly="1">
                            <list>
                                <field name="level_id"/>
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="status"/>
                                <field name="approved_by_user_id"/>
                                <field name="rejected_by_user_id"/>
                                <button name="action_approve" type="object" string="Approve" class="btn btn-primary"
                                        modifiers="{'invisible': ['|', ('status', '!=', 'current'), ('user_ids', 'not in', [uid])]}"/>
                                <button name="action_reject" type="object" string="Reject" class="btn btn-secondary"
                                        modifiers="{'invisible': ['|', ('status', '!=', 'current'), ('user_ids', 'not in', [uid])]}"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_inherit_approval" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit.approval.state</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="widget">badge</attribute>
                    <attribute name="decoration-warning">state == 'to approve'</attribute>
                    <attribute name="decoration-success">state in ('purchase')</attribute>
                    <attribute name="decoration-muted">state == 'cancel'</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

